---
import "../styles/coffeeVarieties.css"; // Archivo CSS dedicado a este componente
---

<section class="coffee-varieties">
  <div class="coffee-varieties__background-text">Variedades de Café</div>
  <div class="coffee-varieties__grid">
    <!-- Bloques de cada café -->
    <article class="coffee-item">
      <img
        src="/variedad-danche.svg"
        alt="Café 1 - Descripción"
        class="coffee-item__image"
      />
      <div class="coffee-item__info">
        <h3 class="coffee-item__title">Café danche</h3>
        <p class="coffee-item__description">
          Intenso y brillante, con notas de frutas rojas y cítricos.
        </p>
      </div>
    </article>

    <article class="coffee-item">
      <img
        src="/variedad-espresso.svg"
        alt="Café 2 - Descripción"
        class="coffee-item__image"
      />
      <div class="coffee-item__info">
        <h3 class="coffee-item__title">Café gran espresso</h3>
        <p class="coffee-item__description">
          Floral y afrutado, con un toque de acidez brillante.
        </p>
      </div>
    </article>

    <article class="coffee-item">
      <img
        src="/variedad-picollo.svg"
        alt="Café 3 - Descripción"
        class="coffee-item__image"
      />
      <div class="coffee-item__info">
        <h3 class="coffee-item__title">Café picollo</h3>
        <p class="coffee-item__description">
          Chocolateado, con cuerpo medio y un final especiado.
        </p>
      </div>
    </article>

    <article class="coffee-item">
      <img
        src="/variedad-planalto.svg"
        alt="Café 4 - Descripción"
        class="coffee-item__image"
      />
      <div class="coffee-item__info">
        <h3 class="coffee-item__title">Café planalto</h3>
        <p class="coffee-item__description">
          Suave y balanceado, con notas de caramelo y frutos secos.
        </p>
      </div>
    </article>
  </div>
</section>
